<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Generar remito</title>
    <%- include("partials/head") %>
    <link rel="stylesheet" href="/css/clientes.css" />
  </head>
  <body>
    <%- include("partials/navigation") %>
    <div class="container">
      <div class="container mt-4">
        <div class="row">
          <div class="col">
            <div id="dateTime" class="text-center mb-4">
              <!-- You can use JavaScript to dynamically display date and time here -->
            </div>

            <div class="mb-3">
              <p class="fw-bold">Codigo:</p>
              <div id="codigo" class="border border-secondary p-2">
                <!-- You can display the code dynamically here using JavaScript -->
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="container mt-4">
        <div class="row">
          <div class="col">
            <h1>Información de Cliente</h1>
            <input
              type="text"
              id="searchInput"
              class="form-control mb-3"
              placeholder="Buscar cliente..."
            />
            <ul id="clientesList" class="list-group"></ul>
            <div id="clienteDetails" class="mt-3"></div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6">
            <div class="referencia mb-3">
              <select id="Modo" class="form-select mb-3">
                <option value="">ELEGIR MODO</option>
                <option value="OS">OS</option>
                <option value="OT">OT</option>
                <option value="PIR">PIR</option>
              </select>
              <input
                type="number"
                id="numRef"
                class="form-control"
                placeholder="Cargar valor numérico"
              />
            </div>

            <select id="modo" class="form-select mb-3">
              <option value="">ELEGIR MODO DE REMITIR</option>
              <option value="lista_materiales">POR LISTA DE MATERIALES</option>
              <option value="manual">FORMA MANUAL</option>
            </select>

            <div id="listaMaterialesForm" style="display: none">
              <div class="mb-3">
                <input
                  type="file"
                  id="inputFile"
                  class="form-control"
                  accept=".xlsx, .xls, .xlsm"
                />
              </div>
              <button onclick="readExcelFile()" class="btn btn-primary">
                Cargar Archivo
              </button>
              <div id="output" class="mt-3"></div>
            </div>

            <div id="manualForm" style="display: none">
              <div class="container mb-3">
                <div class="row">
                  <div class="col">
                    <label for="cantidad">Cantidad:</label>
                    <input type="number" id="cantidad" class="form-control" />
                  </div>
                  <div class="col">
                    <label for="descripcion">Descripción:</label>
                    <input type="text" id="descripcion" class="form-control" />
                  </div>
                  <div class="col">
                    <button
                      onclick="agregarPieza()"
                      class="btn btn-primary mt-4"
                    >
                      Agregar Pieza
                    </button>
                  </div>
                </div>
              </div>

              <h3>Piezas del Remito</h3>
              <div id="listaPiezas"></div>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col">
            <button id="miBotonGenerarObjeto" class="btn btn-success">
              Generar Remito
            </button>
          </div>
        </div>
      </div>
    </div>
    <br />
    <br />
    <%- include("partials/footer") %> <%- include("partials/scripts") %>
  </body>
</html>
